<h1>Please add your review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.label "Enter your rating" %>
  <%= f.select :rating, (0..5) %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

